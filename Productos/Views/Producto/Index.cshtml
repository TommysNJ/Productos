@model List<Producto> 
@{
    ViewData["Title"] = "Lista de productos";
}
<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create", "Producto")'">Nuevo Producto</button>


<p>En esta página se muestran los productos</p>


<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>@item.IdProducto</td>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>@item.Cantidad</td>
            <td><button type="button" class="btn btn-light">Ver</button></td>
            <td><button type="button" class="btn btn-secondary">Editar</button></td>
            <td><button type="button" class="btn btn-dark">Eliminar</button></td>
            <td></td>
        </tr>
        }
    </tbody>
</table>

